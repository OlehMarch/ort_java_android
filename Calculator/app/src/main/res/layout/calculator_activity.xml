<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calculator_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ghh0stex.calculator.CalculatorActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textSize="18sp"
        android:gravity="end"
        android:textAlignment="textEnd"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/et_firstOperand"
        android:layout_alignLeft="@+id/et_operation"
        android:layout_alignStart="@+id/et_operation"
        android:singleLine="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/et_operation"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/et_secondOperand"
        android:singleLine="true"
        android:textAlignment="textEnd" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:layout_below="@+id/et_secondOperand"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/et_result"
        android:singleLine="true"
        android:textAlignment="textEnd" />

    <Button
        android:text="Calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_result"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/buttonCalculate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="buttonCalculate_Click" />

    <TextView
        android:text="First operand:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_firstOperand"
        android:textSize="18sp"
        android:gravity="end|center"
        android:textAlignment="textEnd"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/et_firstOperand"
        android:layout_toStartOf="@+id/et_firstOperand"
        android:layout_above="@+id/et_operation" />

    <TextView
        android:text="Result:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_result"
        android:textSize="18sp"
        android:gravity="end|center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/et_result"
        android:layout_toLeftOf="@+id/et_result"
        android:layout_above="@+id/buttonCalculate"
        android:layout_alignRight="@+id/tv_secondOperand"
        android:layout_alignEnd="@+id/tv_secondOperand"
        android:layout_below="@+id/et_secondOperand" />

    <TextView
        android:text="Second operand:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_secondOperand"
        android:textSize="18sp"
        android:gravity="end|center"
        android:textAlignment="textEnd"
        android:layout_below="@+id/et_operation"
        android:layout_toStartOf="@+id/et_secondOperand"
        android:layout_toLeftOf="@+id/et_secondOperand"
        android:layout_above="@+id/et_result"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Operation:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_operation"
        android:textSize="18sp"
        android:gravity="end|center"
        android:textAlignment="textEnd"
        android:layout_above="@+id/tv_secondOperand"
        android:layout_toStartOf="@+id/et_firstOperand"
        android:layout_toLeftOf="@+id/et_firstOperand"
        android:layout_below="@+id/et_firstOperand"
        android:layout_alignLeft="@+id/tv_secondOperand"
        android:layout_alignStart="@+id/tv_secondOperand" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/et_operation"
        android:singleLine="true"
        android:layout_below="@+id/et_firstOperand"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="text"
        android:textAlignment="textEnd" />

</RelativeLayout>
